@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-warning">
            <div class="card-header bg-warning text-dark text-center">
                <h3><i class="fas fa-exclamation-triangle"></i> Access Denied</h3>
            </div>
            <div class="card-body text-center">
                <div class="mb-4">
                    <i class="fas fa-lock fa-4x text-warning"></i>
                </div>
                <h5>You don't have permission to access this resource</h5>
                <p class="text-muted">
                    This page requires authentication. Please log in to continue.
                </p>
                
                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary me-md-2">
                        <i class="fas fa-sign-in-alt"></i> Login
                    </a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-success me-md-2">
                        <i class="fas fa-user-plus"></i> Register
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-home"></i> Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
